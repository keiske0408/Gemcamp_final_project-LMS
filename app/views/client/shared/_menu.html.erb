<!-- Offcanvas Menu -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <!-- Navbar Links in Offcanvas Menu -->
    <div class="d-flex justify-content-center align-items-center vh-50">
      <div class="container rounded p-2" style="max-width: 1200px; height: 600px;"> <!-- Adjusted max-width and added height -->
        <!-- Profile Section -->
        <div class="d-flex align-items-center mb-5">
          <% if current_client.present? %>
            <img src="<%= current_client.image.url.present? ? current_client.image.url : 'https://via.placeholder.com/200' %>" class="border border-4 border-primary me-4 rounded-3" style="width: 150px; height: 150px;" alt="Profile Image">
            <div>
              <h3 class="mb-1"><%= current_client.username %></h3>
              <p class="text-muted fs-6 mb-1 py-1"><i class="bi bi-envelope me-1"></i><%= current_client.email %></p>
              <p class="text-muted fs-6 py-1"><i class="bi bi-coin me-1"></i><%= current_client.coins %></p>
            </div>
          <% else %>
            <!-- Fallback content when no client is logged in -->
            <img src="https://via.placeholder.com/200" class="border border-4 border-primary me-4 rounded-3" style="width: 150px; height: 150px;" alt="Profile Image">
            <p><%= t('please_log_in') %></p> <!-- Translated text for login prompt -->
          <% end %>
        </div>

        <!-- Cash In Now Button -->
        <div class="d-grid mb-5">
          <button class="btn btn-primary btn-lg fw-bold py-3"><%= t('cash_in_now') %></button> <!-- Translated Button Text -->
        </div>

        <!-- Links Section -->
        <div class="list-group">
          <a href="#" class="list-group-item list-group-item-action d-flex align-items-center fs-5 py-3">
            <i class="bi bi-telephone me-3 text-primary"></i> <%= t('contact_us') %> <!-- Translated Contact Us Text -->
          </a>
          <% if current_client.present? %>
            <%= link_to client_me_path, class: "list-group-item list-group-item-action d-flex align-items-center fs-5 py-3 " do %>
              <i class="bi bi-person me-3 text-primary"></i> <%= t('my_profile') %> <!-- Translated My Profile Text -->
            <% end %>
          <% else %>
            <p class="list-group-item list-group-item-action fs-5 py-3"><%= t('please_log_in_profile') %></p> <!-- Translated login prompt for profile -->
          <% end %>
          <%= button_to destroy_client_session_path, method: :delete, class: "list-group-item list-group-item-action d-flex align-items-center fs-5 py-3 ", data: { confirm: t('sign_out_confirm') } do %> <!-- Translated sign-out confirmation -->
            <i class="text-danger bi bi-box-arrow-right me-3"></i> <%= t('sign_out') %> <!-- Translated Sign Out Text -->
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
