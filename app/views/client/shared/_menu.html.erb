<!-- Offcanvas Menu -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <!-- Navbar Links in Offcanvas Menu -->
    <div class="d-flex justify-content-center align-items-center vh-50 bg-light">
      <div class="container rounded p-2" style="max-width: 1200px; height: 600px;"> <!-- Adjusted max-width and added height -->
        <!-- Profile Section -->
        <div class="d-flex align-items-center mb-5">
          <img src="https://via.placeholder.com/200" class="border border-4 border-primary me-4 rounded-3" style="width: 150px; height: 150px;" alt="Profile Image">
          <div>
            <h3 class="mb-1"><%= current_client&.username %></h3>
            <p class="text-muted fs-6 mb-1 py-1"><i class="bi bi-envelope me-1"></i><%= current_client&.email %></p>
            <p class="text-muted fs-6 py-1"><i class="bi bi-coin me-1"></i><%= current_client&.coins %></p>
          </div>
        </div>
        <!-- Cash In Now Button -->
        <div class="d-grid mb-5">
          <button class="btn btn-primary btn-lg fw-bold py-3">Cash In Now</button>
        </div>
        <!-- Links Section -->
        <div class="list-group">
          <a href="#" class="list-group-item list-group-item-action d-flex align-items-center fs-5 py-3">
            <i class="bi bi-telephone me-3 text-primary"></i> Contact Us
          </a>
          <a href="#" class="list-group-item list-group-item-action d-flex align-items-center fs-5 py-3">
            <i class="bi bi-person me-3 text-primary"></i> My Profile
          </a>
          <%= button_to destroy_client_session_path, method: :delete, class: "list-group-item list-group-item-action d-flex align-items-center fs-5 py-3 ", data: { confirm: 'Are you sure you want to sign out?' } do %>
            <i class="text-danger bi bi-box-arrow-right me-3"></i> Sign Out
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
