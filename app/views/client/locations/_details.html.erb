<div class="card shadow-sm border rounded-3 mb-4">
  <div class="card-body">
    <h5 class="card-title text-primary"><strong><%= @location.name %></strong></h5>
    <p class="card-text mb-1"><i class="bi bi-telephone"></i> <%= @location.phone_number %></p>
    <p class="card-text mb-1"><strong>Address:</strong> <%= @location.street_address %></p>
    <p class="card-text mb-1"><strong>Barangay:</strong> <%= @location.barangay.name %></p>
    <p class="card-text mb-1"><strong>City:</strong> <%= @location.city.name %></p>
    <p class="card-text mb-1"><strong>Province:</strong> <%= @location.province.name %></p>
    <p class="card-text"><strong>Type: </strong><%= @location.genre %></p>
  </div>
</div>
