<div class="container my-5">
<!-- Header Section -->
  <div class="text-center mb-4">
    <h1 class="display-4">Invite People</h1>
    <p class="lead">Scan the QR Code or use the invite URL to invite your friends and earn rewards!</p>
  </div>

  <!-- QR Code Section -->
  <div class="d-flex justify-content-center align-items-center bg-light rounded p-4 shadow-sm mb-4">
    <%= raw @qrcode_svg %>
  </div>

  <!-- Invite URL -->
  <div class="text-center mb-5">
    <h2 class="h4">Invite URL:</h2>
    <p>
      <a href="<%= new_client_registration_url(promoter: @promoter_email || 'default@example.com') %>" class="text-primary">
        <%= new_client_registration_url(promoter: @promoter_email || 'default@example.com') %>
      </a>
    </p>
  </div>

  <!-- Invited Members Section -->
  <div class="card mb-4">
    <div class="card-header bg-primary text-white">
      <h3 class="h5 mb-0">Your Invited Members</h3>
    </div>
    <div class="card-body">
      <% if @invited_members.any? %>
        <ul class="list-group">
          <% @invited_members.each do |member| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= member.username %></span>
              <span class="text-muted"><%= member.email %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">You have not invited any members yet.</p>
      <% end %>
    </div>
  </div>

  <!-- Level Information Section -->
  <div class="card">
    <div class="card-header bg-success text-white">
      <h3 class="h5 mb-0">Level Information</h3>
    </div>
    <div class="card-body">
      <% if @current_level %>
        <p><strong>Current Level:</strong> <%= @current_level.level %></p>
      <% else %>
        <p class="text-muted">You have not reached any level yet.</p>
      <% end %>

      <% if @next_level %>
        <p><strong>Next Level:</strong> <%= @next_level.level %></p>
        <p><strong>Required Invites:</strong> <%= @next_level.required_members - @invited_members.count %></p>
        <p><strong>Coins Reward:</strong> <%= @next_level.coins %></p>
      <% else %>
        <p class="text-muted">You've reached the maximum level!</p>
      <% end %>
    </div>
  </div>
</div>
