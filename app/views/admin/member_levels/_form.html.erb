<div class="card-body">
  <%= form_with(model: member_level, url: url, method: method, local: true, class: "row g-3") do |form| %>
    <% if member_level.errors.any? %>
      <div class="alert alert-danger">
        <h5><%= pluralize(member_level.errors.count, "error") %> prohibited this member level from being saved:</h5>
        <ul class="mb-0">
          <% member_level.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-4">
      <%= form.label :level, "Level", class: "form-label" %>
      <%= form.number_field :level, class: 'form-control', placeholder: "Enter level" %>
    </div>

    <div class="col-md-4">
      <%= form.label :required_members, "Required Members", class: "form-label" %>
      <%= form.number_field :required_members, class: 'form-control', placeholder: "Enter required members" %>
    </div>

    <div class="col-md-4">
      <%= form.label :coins, "Coins Reward", class: "form-label" %>
      <%= form.number_field :coins, class: 'form-control', placeholder: "Enter coins reward" %>
    </div>

    <div class="col-12">
      <%= form.submit member_level.new_record? ? "Create Member Level" : "Update Member Level", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
</div>
<div class="card-footer text-end">
  <%= link_to 'Back', admin_member_levels_path, class: "btn btn-secondary" %>
</div>
