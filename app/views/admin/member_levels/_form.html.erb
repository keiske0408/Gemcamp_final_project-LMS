<h1><%= @member_level.new_record? ? "New" : "Edit" %> Member Level</h1>
<%= form_with model: member_level, url: url, method: method, local: true do |form| %>
  <div class="form-group">
    <%= form.label :level, "Level" %>
    <%= form.number_field :level, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :required_members, "Required Members" %>
    <%= form.number_field :required_members, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :coins, "Coins Reward" %>
    <%= form.number_field :coins, class: 'form-control' %>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>
