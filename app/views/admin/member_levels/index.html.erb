<h1>Member Levels</h1>
<%= link_to 'New Member Level', new_admin_member_level_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
  <tr>
    <th>Level</th>
    <th>Required Members</th>
    <th>Coins</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @member_levels.each do |member_level| %>
    <tr>
      <td><%= member_level.level %></td>
      <td><%= member_level.required_members %></td>
      <td><%= member_level.coins %></td>
      <td>
        <%= link_to 'Edit', edit_admin_member_level_path(member_level), class: 'btn btn-secondary' %>
        <%= link_to 'Delete', admin_member_level_path(member_level), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
