<h1 class="text-center my-4">News Tickers Management</h1>
<div class="container-fluid px-4 mt-3 w-75">
  <div class="card mb-4 mt-3">
    <div class="card-header">
      <div class="d-flex justify-content-between">
        <%= link_to 'New News Ticker', new_admin_news_ticker_path, class: 'btn btn-primary' %>
        <%= link_to 'Back to Admin', admin_users_path, class: 'btn btn-secondary' %>
      </div>
    </div>
    <div class="card-body">
      <table class="table table-striped table-hover border rounded">
        <thead class="table-dark text-center">
        <tr>
          <th style="border-right: 1px solid #dee2e6;">Content</th>
          <th style="border-right: 1px solid #dee2e6;">Status</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @news_tickers.each do |news_ticker| %>
          <tr>
            <td class="text-center" style="border-right: 1px solid #dee2e6;"><%= news_ticker.content %></td>
            <td class="text-center" style="border-right: 1px solid #dee2e6;"><%= news_ticker.active? ? "Active" : "Inactive" %></td>
            <td class="text-center">
              <div class="btn-group" role="group">
                <%= link_to 'Edit', edit_admin_news_ticker_path(news_ticker), class: 'btn btn-outline-warning btn-sm' %>
                <%= button_to 'Delete', admin_news_ticker_path(news_ticker), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination justify-content-center">
        <%#= paginate @news_tickers %>
      </div>
    </div>
  </div>
</div>
