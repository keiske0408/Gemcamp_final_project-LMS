<h1 class="text-center my-4">Categories Management</h1>
<div class="container-fluid px-4 mt-3 w-75">
  <div class="card mb-4 mt-3">
    <div class="card-header">
      <div class="d-flex justify-content-between">
        <%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary' %>
        <%= link_to 'Back to Admin', admin_users_path, class: 'btn btn-secondary' %>
      </div>
    </div>
    <div class="card-body">
      <table class="table table-striped table-hover border rounded">
        <thead class="table-dark text-center">
        <tr>
          <th style="border-right: 1px solid #dee2e6;">Name</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td class="text-center" style="border-right: 1px solid #dee2e6;"><%= category.name %></td>
            <td class="text-center">
              <div class="btn-group" role="group">
                <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-outline-warning btn-sm' %>
                <% if category.deleted_at.nil? %>
                  <%= button_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
                <% else %>
                  <%= link_to 'Restore', restore_admin_category_path(category), method: :patch, class: 'btn btn-outline-success btn-sm' %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination justify-content-center">
        <%= paginate @categories %>
      </div>
    </div>
  </div>
</div>
