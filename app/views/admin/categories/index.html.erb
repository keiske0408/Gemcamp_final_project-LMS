<h1>Categories Management</h1>
<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary mb-3' %>

<!-- Categories Table -->
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td>
        <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-sm btn-warning' %>

        <% if category.deleted_at.nil? %>
          <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        <% else %>
          <%= link_to 'Restore', restore_admin_category_path(category), method: :patch, class: 'btn btn-sm btn-success' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
