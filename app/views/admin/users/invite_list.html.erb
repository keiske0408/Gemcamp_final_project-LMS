<div class="container mt-4">

  <div class="card w-50 mx-auto">
    <div class="card-header">
      <h4 class="card-title">Admin Invite List</h4>
    </div>
    <div class="card-body">
      <%= form_with(url: invite_list_admin_users_path, method: :get, local: true) do |f| %>
        <div class="d-flex flex-column align-items-center">
          <div class="col-md-8 mb-3">
            <%= f.label :parent_email_cont, "Search by Parent Email", class: "form-label" %>
            <%= f.text_field :parent_email_cont, class: "form-control form-control-sm", value: params[:parent_email_cont] %>
          </div>
          <div class="d-flex justify-content-center mt-2">
            <%= f.submit "Search", class: "btn btn-primary btn-sm me-2" %>
            <%= link_to "Clear Filter", invite_list_admin_users_path, class: "btn btn-secondary btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="table-responsive mt-4">
    <table class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Parent Email</th>
        <th>Email</th>
        <th>Total Deposit</th>
        <th>Members' Total Deposit</th>
        <th>Coins</th>
        <th>Created At</th>
        <th>Coins Used Count</th>
        <th>Child Members</th>
      </tr>
      </thead>
      <tbody>
      <% if @users.present? %>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.parent&.email || "N/A" %></td>
            <td><%= user.email %></td>
            <td><%= user.total_deposit || 0 %></td>
            <td><%= user.children.pluck(:total_deposit).reject(&:nil?).sum %></td>
            <td><%= user.coins || 0 %></td>
            <td><%= user.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= user.coins_used_count %></td>
            <td><%= user.children.count %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="8" class="text-center">No users found with parents.</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="pagination justify-content-start mt-3">
    <%= paginate @users %>
  </div>
</div>
