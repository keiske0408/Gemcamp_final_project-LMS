<h1 class="text-center my-4">Banners Management</h1>
<div class="container-fluid px-4 mt-3 w-75">
  <div class="card mb-4 mt-3">
    <div class="card-header">
      <div class="d-flex justify-content-between">
        <%= link_to 'New Banner', new_admin_banner_path, class: 'btn btn-primary' %>
        <%= link_to 'Back to Admin', admin_users_path, class: 'btn btn-secondary' %>
      </div>
    </div>
    <div class="card-body">
      <table class="table table-striped table-hover border rounded">
        <thead class="table-dark text-center">
        <tr>
          <th style="border-right: 1px solid #dee2e6;">Preview</th>
          <th style="border-right: 1px solid #dee2e6;">Online At</th>
          <th style="border-right: 1px solid #dee2e6;">Offline At</th>
          <th style="border-right: 1px solid #dee2e6;">Status</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @banners.each do |banner| %>
          <tr>
            <td class="text-center" style="border-right: 1px solid #dee2e6;"><%= banner.preview %></td>
            <td class="text-center" style="border-right: 1px solid #dee2e6;">
              <%= banner.online_at.present? ? banner.online_at.strftime('%B %d, %Y at %I:%M %p') : 'N/A' %>
            </td>
            <td class="text-center" style="border-right: 1px solid #dee2e6;">
              <%= banner.offline_at.present? ? banner.offline_at.strftime('%B %d, %Y at %I:%M %p') : 'N/A' %>
            </td>
            <td class="text-center" style="border-right: 1px solid #dee2e6;"><%= banner.status.capitalize %></td>
            <td class="text-center">
              <div class="btn-group" role="group">
                <%= link_to 'Edit', edit_admin_banner_path(banner), class: 'btn btn-outline-warning btn-sm' %>
                <%= button_to 'Delete', admin_banner_path(banner), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
